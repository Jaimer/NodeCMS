<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateDate post.date 'MMMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
          <p>{{post.body}}</p>

          <hr>

          {{#if post.allowComments}}
          {{#if user}}
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments" method="POST">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
                </div>
                <input type="hidden" name="id" value="{{post.id}}">
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          {{else}}
          <div class="card my-4">
            <h5 class="card-header"><a href="/login">Login</a> to comment</h5>
            <div class="card-body">
            </div>
          </div>
          {{/if}}
          {{else}}
          <div class="card my-4">
            <h5 class="card-header">Comments not allowed</h5>
            <div class="card-body">
            </div>
          </div>
          {{/if}}

          {{#if post.comments}}
          {{#each post.comments}}
          <!-- Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
              {{body}}
            </div>
          </div>
          {{/each}}
          {{else}}
          <div class="media mb-4">
            <h3>Nobody has commented yet.</h3>
          </div>
