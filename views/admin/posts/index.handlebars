<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>ALL POSTS</h1>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Allow Comments</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td scope="row">{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{status}}</td>
                        <td>{{allowComments}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>