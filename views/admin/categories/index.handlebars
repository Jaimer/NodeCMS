<div class="row">
    <div class="col-sm-4">
        <h2>Create Category</h2>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
              <label for="name"></label>
              <input type="text" class="form-control" name="name" placeholder="Enter Name">
            </div>
            <button type="submit" class="btn btn-primary">Create Category</button>
        </form>
    </div>
    <div class="col-sm-8">
        <h2>Categories List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td scope="row">{{id}}</td>
                    <td><a href="/admin/categories/edit/{{id}}">{{name}}</a></td>
                    <td>{{generateDate date "D/M/YYYY H:m"}}</td>
                    <td><form action="/admin/categories/delete/{{id}}?_method=DELETE" method="POST"><button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button></form></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>